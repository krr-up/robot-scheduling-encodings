% ------------------------------------------------------------------------------
% Standard rules for the graphs
% ------------------------------------------------------------------------------

% ------------------------------------------------------------------------------
% Undirected edges
% ------------------------------------------------------------------------------

edge(V',V,W) :- edge(V,V',W).

% ------------------------------------------------------------------------------
% Rules for conflicts: 1) each vertex conflicts with itself, 2) conflicts are
% symmetric.
% ------------------------------------------------------------------------------

conflict(V,V;V',V')       :- edge(V,V',_).

% symmetry
conflict(Y,X)              :- conflict(X,Y).


